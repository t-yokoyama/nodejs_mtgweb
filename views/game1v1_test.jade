doctype html
html

  head

    title 1v1 Game Test

    link(href="stylesheets/jquery.contextmenu.css", rel="stylesheet")
    link(href="stylesheets/gameplay.css", rel="stylesheet")

    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src='https://code.jquery.com/jquery-1.9.1.min.js')
    script(src="https://code.jquery.com/ui/1.11.4/jquery-ui.js")
    script(src="javascripts/gameplay.js")

    script.

      $(document).ready(function() {

        var client_io = io('/game1v1');
        window.g_client_io = client_io;

        initGlobals();
        setClientIOCallbacks();

        client_io.on('connect', function(data) {

          client_io.emit('join_room', { userid: 1,
                                        roomid: 0 });
        });

      });


  body

    div(id="window")
      div(id="info_bar")
        div(id="zoom_box"  class="info_widget")
        div(id="status_box" class="info_widget")
          table
            thead
              tr
                th
                th
                th
                th me
                th opp.
            tbody
              tr
                td LIFE
                td
                  input(id="life_set" class="control_button" type="text" size=1 onkeypress="return event.charCode >= 48 && event.charCode <= 57")
                  a(class="control_button", href="#") set
                td
                  a(class="control_button", href="#") +
                  a(class="control_button", href="#") -
                td: div(id="my_life" align="center")
                td: div(id="opp_life" align="center")
              tr
                td POISON
                td
                td
                  a(class="control_button", href="#") +
                  a(class="control_button", href="#") -
                td: div(id="my_poison" align="center")
                td: div(id="opp_poison" align="center")
              tr
                td LIBRARY
                td
                td
                td: div(id="my_libsize" align="center")
                td: div(id="opp_libsize" align="center")

        div(id="control_box" class="info_widget")
        div(id="chat_box" class="info_widget")
      div(id="battlefield_wrapper")
        div(class="battlefield", id="opp_battlefield") opp_battlefield
          div(class="opp_zone", id="opp_hand") opp_hand
          div(class="opp_zone", id="opp_library") opp_library
          div(class="opp_zone", id="opp_graveyard") opp_graveyard
          div(class="opp_zone", id="opp_exile") opp_exile
        div(class="battlefield", id="my_battlefield") my_battlefield
          div(class="zone", id="library") library
          div(class="zone", id="graveyard") graveyard
          div(class="zone", id="exile") exile
          div(class="zone", id="hand") hand

